<h1>Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><% category.name%></td>
      <td><% link_to 'Show', category, class: 'btn btn-secondary'%></td>
      <td><%= link_to "Edit", edit_category_path(@category), class: 'btn btn-secondary'%></td>
      <td><%= link_to "Destroy", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: 'btn btn-danger'%></td>
    </tr>   
  </tbody>
</table>
<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category %>
    </p>
  <% end %>
</div>
 <%= link_to "New Category", new_category_path, class: 'btn btn-primary' %>
